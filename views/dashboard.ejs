<h1 class="mt-4">Strona zadań</h1>
<p class="lead mb-3">Witaj <span id=rankName><%= user.rank %></span> <%= user.name %></p>
<img id="rankImg" alt="naramiennik" src="ranks/Szeregowy.png" height="30vh" />
<p class="mb-3">Twoja drużyna: <span style="background-color: white"><%= user.team %></span></p>
<hr class="newHr">
<%= user.rank %>
<%= user.id %>
<% user.rank = 'general' %>
<%= user.rank %>
<%= info %>
<% tasks.forEach((task) => { %>
    <task-card name=<%= task.title %> number=<%= task.taskNumber %> avatar="icons/signpost.png">
        <div slot="number"><%= task.taskNumber %></div>
        <div slot="title"><%= task.title %></div>
        <div slot="code"></div>
        <div slot="content"><%= task.content %></div>
        <div slot="podpowiedz1"><%= task.firstHint %></div>
        <div slot="podpowiedz2"><%= task.secondHint %></div>
        <div slot="rozwiazanie"><%= task.solution %></div>
    </task-card>
    
    <hr>
    <% }) %>
    <h6>Strefa zakończenia gry</h6>
    <h6 id="sumUpInfo">Uwaga! jeśli zakończysz grę, nie będzie możliwe jej kontynuowanie.</h6>
    <button class="btnEnd" id="btnEndGame">Zakończ grę</button>
    <button class="btnEnd" id="btnSumUpEnd">Zakończ i podsumuj</button>
    <h6 id="mainCounter">Counter podsumowujący</h6>
    <h6 id="mainCounter">0</h6>
    <% mainCounter = 100 %>
    <%= mainCounter %>
    <script 
    src="../userCard.js"
  ></script>

        
   